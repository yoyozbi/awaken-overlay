{
  "name": "awaken-overlay",
  "version": "0.0.1",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "npm-run-all db:migrate db:seed svelte:start",
    "db:seed": "npx prisma db seed",
    "db:migrate": "node scripts/check-db.js",
    "svelte:start": "node ./wsServer.js",
    "dev": "vite dev",
    "build": "npm-run-all build:db-client build:vite",
    "build:vite": "vite build",
    "build:db-client": "prisma generate",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^1.3.1",
    "@sveltejs/kit": "^1.25.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.6",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-custom": "workspace:^",
    "postcss": "^8.4.31",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.8",
    "prisma": "5.4.2",
    "svelte": "^4.0.5",
    "svelte-body": "^1.4.0",
    "svelte-check": "^3.5.2",
    "svelte-heros-v2": "^0.7.4",
    "svelte-preprocess": "^5.0.4",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.25.8"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-prisma": "^3.0.2",
    "@popperjs/core": "^2.11.8",
    "@prisma/client": "5.5.0",
    "@trpc/client": "^10.40.0",
    "@trpc/server": "^10.40.0",
    "@types/ws": "^8.5.7",
    "chalk": "^5.3.0",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.10",
    "flowbite": "^1.8.1",
    "flowbite-svelte": "^0.44.18",
    "lucia": "^2.7.1",
    "npm-run-all": "^4.1.5",
    "svelte-time": "^0.8.0",
    "trpc-sveltekit": "^3.5.21",
    "ts-node": "^10.9.1",
    "ui": "workspace:^",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "yup": "^1.3.2"
  }
}
