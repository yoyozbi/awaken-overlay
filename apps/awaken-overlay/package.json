{
  "name": "awaken-overlay",
  "version": "0.0.1",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "npm run build:db-client && npm run db:migrate && npm run db:seed && npm run svelte:start",
    "db:seed": "prisma db seed",
    "db:migrate": "node scripts/check-db.js",
    "svelte:start": "node ./wsServer.js",
    "dev": "vite dev",
    "build": "npm run build:db-client && npm run build:vite",
    "build:vite": "vite build",
    "build:db-client": "prisma generate",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^2.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.6",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-custom": "workspace:^",
    "postcss": "^8.4.31",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.8",
    "svelte": "^4.0.5",
    "svelte-body": "^1.4.0",
    "svelte-check": "^3.5.2",
    "svelte-heros-v2": "^0.7.4",
    "svelte-preprocess": "^5.0.4",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "type": "module",
  "dependencies": {
    "prisma": "5.10.2",
    "@lucia-auth/adapter-prisma": "^4.0.0",
    "@popperjs/core": "^2.11.8",
    "@prisma/client": "5.10.2",
    "@trpc/client": "^10.45.1",
    "@trpc/server": "^10.45.1",
    "@types/ws": "^8.5.7",
    "chalk": "^5.3.0",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.10",
    "flowbite": "^1.8.1",
    "flowbite-svelte": "^0.45.0",
    "lucia": "^3.0.1",
    "oslo": "^1.1.3",
    "svelte-time": "^0.8.2",
    "trpc-sveltekit": "^3.6.1",
    "ts-node": "^10.9.1",
    "ui": "workspace:^",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "yup": "^1.3.2"
  }
}
