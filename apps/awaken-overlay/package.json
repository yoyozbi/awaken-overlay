{
  "name": "awaken-overlay",
  "version": "0.0.1",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "npm-run-all db:migrate db:seed svelte:start",
    "db:seed": "npx prisma db seed",
    "db:migrate": "node scripts/check-db.js",
    "svelte:start": "node ./wsServer.js",
    "dev": "vite dev",
    "build": "npm-run-all build:db-client build:vite",
    "build:vite": "vite build",
    "build:db-client": "prisma generate",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^1.2.4",
    "@sveltejs/kit": "^1.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.4",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.1.4",
    "eslint": "^8.28.0",
    "eslint-config-custom": "workspace:^",
    "postcss": "^8.4.23",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.0",
    "prisma": "4.16.2",
    "svelte": "^3.54.0",
    "svelte-body": "^1.3.6",
    "svelte-check": "^3.0.1",
    "svelte-heros-v2": "^0.7.1",
    "svelte-preprocess": "^5.0.3",
    "tailwindcss": "^3.3.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.7",
    "vitest": "^0.25.3"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-prisma": "^2.0.0",
    "@popperjs/core": "^2.11.7",
    "@prisma/client": "4.16.2",
    "@trpc/client": "^10.29.1",
    "@trpc/server": "^10.29.1",
    "@types/ws": "^8.5.4",
    "chalk": "^5.2.0",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.7",
    "flowbite": "^1.6.5",
    "flowbite-svelte": "^0.44.15",
    "lucia-auth": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "svelte-time": "^0.7.1",
    "trpc-sveltekit": "^3.5.12",
    "ts-node": "^10.9.1",
    "ui": "workspace:^",
    "uuid": "^9.0.0",
    "ws": "^8.13.0",
    "yup": "^1.2.0"
  }
}
